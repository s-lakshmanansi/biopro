FILE = raw_input("File Source: ")
f = open(FILE)
req = ''.join(f.readlines()).replace(',', '').split()

KEY_SIZE = int(raw_input("Key Size: "))

print ""
print "`'~.,.~'`'~.,.~'`'~.,.~'`'~.,.~'`'~.,.~'`"
